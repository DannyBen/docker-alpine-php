title   "Docker Utilities"
summary "Utilities for building the docker image"
version "0.0.1"

image_name = 'dannyben/alpine-php'

help   "Build the docker image"
action :build do
  run! "docker build -t #{image_name} ."
end

action :bash do
  run! "docker run -v $PWD/app:/app -it #{image_name} bash"
end

action :push do
  run! "docker push #{image_name}"
end

action :test do
  run! "docker run -v $PWD/app:/app -it #{image_name} php test.php"
end